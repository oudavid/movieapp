<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/corner_card_radius"
    android:layout_margin="@dimen/small_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight">

        <ImageView
            android:id="@+id/actor_image"
            android:layout_width="@dimen/actor_image_size"
            android:layout_height="@dimen/actor_image_size"
            android:layout_margin="@dimen/content_margin"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="24dp"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/actor_name"
            style="@style/item_title_style"
            app:layout_constraintStart_toEndOf="@+id/actor_image"
            app:layout_constraintTop_toTopOf="@+id/actor_image"
            tools:text="Woody" />

        <TextView
            android:id="@+id/age_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:text="@string/age_text"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toEndOf="@+id/actor_image"
            app:layout_constraintTop_toBottomOf="@+id/actor_name"/>

        <TextView
            android:id="@+id/actor_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_margin"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toEndOf="@+id/age_text"
            app:layout_constraintTop_toTopOf="@+id/age_text"
            tools:text="6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>